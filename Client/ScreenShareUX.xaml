    <UserControl x:Class="Client.ScreenShareUX"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Client"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel Orientation="Vertical">
            <Image Width = "720" Height = "480" Source = "{Binding ReceivedImage, Mode=OneWay}" 
            VerticalAlignment = "Center" Margin = "20"/>
            <TextBlock Name="ReceivedMessage" VerticalAlignment = "bottom" Text="{Binding ReceivedMessage, Mode=OneWay}" 
                    Foreground="Yellow" FontSize="25" Padding="10,10,10,10" Margin="220 0 0 0"/>
        </StackPanel>
    </Grid>
</UserControl>
